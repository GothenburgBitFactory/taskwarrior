FROM ubuntu:22.04

RUN apt-get update
RUN DEBIAN_FRONTEND="noninteractive" apt-get install -y build-essential cmake git uuid-dev faketime locales python3 python3-pip curl

# Setup language environment
RUN locale-gen en_US.UTF-8
ENV LC_ALL en_US.UTF-8
ENV LANG en_US.UTF-8
ENV LANGUAGE en_US.UTF-8

# Add source directory
ADD . /root/code/
WORKDIR /root/code/

# Setup Rust
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs > rustup.sh && \
    sh rustup.sh -y --profile minimal --default-toolchain stable --component rust-docs

# Setup taskwarrior
RUN git clean -dfx
RUN git submodule init
RUN git submodule update
RUN cmake -S . -B build -DCMAKE_BUILD_TYPE=Debug .
RUN cmake --build build -j 8
RUN cmake --install build
RUN task --version
RUN cd /root/code/build && python3 -m pip install --user pytest && pytest test/*.test.py || true

# Setup tests
WORKDIR /root/code/build/test
RUN make -j8
RUN python3 -m pip install --user pytest && pytest *.test.py || true
RUN python3 -m pip install --user pytest && pytest test/*.test.py

CMD ["bash", "-c", "./run_all -v ; cat all.log | grep 'not ok' ; ./problems"]
